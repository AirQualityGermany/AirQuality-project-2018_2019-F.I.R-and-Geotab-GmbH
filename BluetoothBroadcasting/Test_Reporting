#!/bin/dash

while true
 do
  
  # reporting temperature
  sudo hcitool -i hci0 cmd 0x08 0x0008 0x02 0x01 0x0a 0xff 0x0275 0x00 0xc6 0x64 0x07 0x00 0x20 0x41
  sleep 1
  
  # reporting temperature and timer
  sudo hcitool -i hci0 cmd 0x08 0x0008 0x02 0x01 0x06 0x0e 0xff 0x0275 0x00 0xc6 0x64 0x07 0x00 0x20 0x41 0xf1 0x03 0x0f4 0x01
  sleep 2


done

#Script is endlessly repeating itself -> ^+"c" to stop running the script
